<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Welcome to Profile page"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#673AB7"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/etMail"
        android:layout_weight="1"
        android:inputType="textEmailAddress"
        android:hint="Email:"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_weight="1"
        android:hint="Password:"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/profile2"
        android:layout_weight="4"
        android:onClick="takePicture"
        android:id="@+id/ivProfilePic"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:onClick="saveToDB"
        android:layout_weight="1"

        android:text="Save to SQLite"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:onClick="saveToDBWithImage"
        android:layout_weight="1"

        android:text="Save with Image to SQLite"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:onClick="showUsers"
        android:layout_weight="1"
        android:text="Show All Users"/>

</LinearLayout>